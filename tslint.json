{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-config-airbnb-base", "tslint-react-recommended", "tslint-config-prettier"],
  "rules": {
    "quotemark": [true, "single", "jsx-double"],
    "align": false,
    "one-variable-per-declaration": false,
    "semicolon": true,
    "object-literal-sort-keys": false,
    "no-implicit-dependencies": [true, ["@scss", "@img", "@core", "@components", "@fonts", "@redux", "@data", "@hooks"]],
    "no-submodule-imports": [true, "react-icons", "lodash", "react-app-polyfill"],
    "whitespace": [true, "check-module"],
    "no-namespace": false
  },
  "rulesDirectory": [""]
}
